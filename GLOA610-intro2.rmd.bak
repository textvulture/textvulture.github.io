       filter(year>1989) %>%
         filter(region != "NA"), 
       aes(x=year, y=Poverty, color=region),
       alpha=0.25) +
  geom_smooth() +
  theme_minimal() +
  labs(x = "Year",
       y = "Population % Under Poverty") +
  theme(legend.title = element_blank()) +
