# First, GDP per capita

```{r, message=FALSE, echo=FALSE, warning=FALSE, results="asis", fig.width=16, fig.height=6, cache=T}
# install.packages('WDI')

library(tidyverse)
library(WDI)
library(ggplot2)

var = c('GDPpc' = 'NY.GDP.PCAP.KD',
        'Growth' = 'NY.GDP.MKTP.KD.ZG',
        'Infant.Mortality' = 'SP.MOR.INFA.ZT',
        'School' = 'SE.PRM.ENRR',
        'Life.Exp' = 'SP.DYN.LE00.IN',
        'Poverty' = 'SI.POV.DDAY')

WDI(indicator=var,
            start=1960,
            country='all',
            end=2021, extra = TRUE) %>% 
			mutate(developed = 
			case_when( GDPpc > 20000 ~ "developed",
                       GDPpc < 20000 ~ "developing")) -> wdi


wdi %>%
  ggplot(aes(year, GDPpc, color=developed)) +
  geom_smooth(alpha=0.25) +
  labs(x = "Year",
       y = "GDP per capita") +
    theme_minimal() +
  theme(legend.title = element_blank()) +
  scale_color_manual(values=c("red", "blue")) +
  theme(legend.text = element_text(size=20),
        axis.text=element_text(size=15),
        axis.title=element_text(size=15))


```

